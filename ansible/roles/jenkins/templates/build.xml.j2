<?xml version='1.0' encoding='UTF-8'?>
<project>
  <actions/>
  <description></description>
  <keepDependencies>false</keepDependencies>
  <properties>
    <com.coravy.hudson.plugins.github.GithubProjectProperty plugin="github@1.10">
      <projectUrl>https://github.com/henryfernandes/goapp.git/</projectUrl>
    </com.coravy.hudson.plugins.github.GithubProjectProperty>
  </properties>
  <scm class="hudson.plugins.git.GitSCM" plugin="git@2.3.4">
    <configVersion>2</configVersion>
    <userRemoteConfigs>
      <hudson.plugins.git.UserRemoteConfig>
        <url>https://github.com/henryfernandes/goapp.git</url>
      </hudson.plugins.git.UserRemoteConfig>
    </userRemoteConfigs>
    <branches>
      <hudson.plugins.git.BranchSpec>
        <name>*/master</name>
      </hudson.plugins.git.BranchSpec>
    </branches>
    <doGenerateSubmoduleConfigurations>false</doGenerateSubmoduleConfigurations>
    <submoduleCfg class="list"/>
    <extensions/>
  </scm>
  <assignedNode>cd</assignedNode>
  <canRoam>false</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers>
    <hudson.triggers.SCMTrigger>
      <spec>H/5 * * * *</spec>
      <ignorePostCommitHooks>false</ignorePostCommitHooks>
    </hudson.triggers.SCMTrigger>
  </triggers>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <hudson.tasks.Shell>
      <command>
sudo docker build -t 127.0.0.1:5000/goapp-build build/.
sudo docker push 127.0.0.1:5000/goapp-build
sudo docker run -t --rm \
  -v code/:/go/src/helloapp \
  -v deploy/:/tmp/deploy \
  127.0.0.1:5000/goapp-build
sudo docker build -t 127.0.0.1:5000/goapp-deploy deploy/.
sudo docker push 127.0.0.1:5000/goapp-deploy
sudo docker run -itd -v deploy/helloapp:/go/bin/helloapp --name app1 127.0.0.1:5000/goapp-deploy
sudo docker run -itd -v deploy/helloapp:/go/bin/helloapp --name app2 127.0.0.1:5000/goapp-deploy
</command>
    </hudson.tasks.Shell>
  </builders>
  <buildWrappers/>
</project>
